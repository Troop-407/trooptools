  <script>
    const toggleNavBtn = document.querySelector('.fa-hamburger-nav');
    const navigationMenu = document.querySelector('.nav');
    var lastToggle;
    toggleNavBtn.addEventListener('click', (event) => {
      // if nav menu display is set to flex, then make it none
      if(navigationMenu.style.display == "flex") {
        navigationMenu.style.display = "none"
        lastToggle = "none"
        toggleNavBtn.style.color = "black"
        return;
      } 
      // if nav menu display is set to none, then make it flex
      navigationMenu.style.display = "flex"
      lastToggle = "flex"
      toggleNavBtn.style.color = "white"
    })
    window.addEventListener('resize', () => {
      // if the window size is 500px greater than 500px make the desktop nav displasy flex
      if(window.innerWidth > 500) {
        navigationMenu.style.display = "flex"
        return
      } 

      navigationMenu.style.display = lastToggle
    })
  </script>
